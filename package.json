{
  "name": "sistema-de-inventario",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build-backend": "cd backend && npm install && npm run build"
  },
    
  "devDependencies": {
    
  },
  "build": {
    "appId": "com.tuempresa.sistemainventario",
    "productName": "Sistema de Inventario",
    "files": [
      "main.js",
      "frontend/.next/**/*",
      "frontend/public/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "backend/dev.db",
        "to": "dev.db"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "node-thermal-printer": "^4.5.0",
    "pdfkit": "^0.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "wait-on": "^8.0.4"
  }
}