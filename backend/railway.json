{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
     "buildCommand": "npm install && npm run build"
  },
  
  "deploy": {
    "runtime": "V2",
     "startCommand": "npm run start:prod",
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}